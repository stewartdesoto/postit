<div class="row">
  <div class="well col-sm-6 col-md-offset-3"
    <%= form_for @user do |f| %>
      <div class="control-group">
        <%= f.label :username %>
        <%= f.text_field :username %>
      </div>
      <div class="control-group">
        <%= f.label :password %>
        <%= f.password_field :password %>
      </div>
      <%= f.submit (@user.new_record? ? "Register" : "Update"), 
          class: "btn btn-success" %>
    <% end %>
  </div>
</div>