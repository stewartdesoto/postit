<div class="navbar row">
  
  <div class="nav_item">
      <h2><%= link_to "PostIt!", root_path, class: 'brand' %></h2>
  </div>

  <div class="btn-group nav_item">
    <%= link_to '#', class: 'btn dropdown-toggle', 'data-toggle' => 'dropdown' do %>
      Categories <span class='caret'></span>
    <% end %>
    <ul class='dropdown-menu'>
      <% Category.all.each do |cat| %>
        <li><%= link_to cat.name, cat %></li>
      <% end %>
      <% if logged_in? %>
        <li class='divider'></li>
        <li>
          <%= link_to(new_category_path) do %>
            <i class="glyphicon glyphicon-plus"></i>
            New Category
          <% end %>
        </li>
      <% end %>
    </ul>
  </div>

  <% if logged_in? %>
    <div class="nav_item">
      <%= link_to 'New Post', new_post_path, class:'btn btn-primary btn-small' %>
    </div>
    


    <ul class="dropdown-menu">
      <li><%= link_to "Edit profile", edit_user_path(current_user) %></li>
      <li><%= link_to "View profile", current_user %></li>
      <li><%= link_to "Logout", logout_path %></li>
    </ul>



  <div class="btn-group nav_item">
    <%= link_to '#', class: 'btn btn-success dropdown-toggle', 'data-toggle' => 'dropdown' do %>
      <%= current_user.username %> <span class='caret'></span>
    <% end %>
    <ul class='dropdown-menu'>
        <li>
          <%= link_to current_user do %>
            <i class="glyphicon glyphicon-user"></i>
            Display User
          <% end %>
        </li>
        <li>
          <%= link_to edit_user_path(current_user) do %>
            <i class="glyphicon glyphicon-edit"></i>
            Edit Profile
          <% end %>
        </li>
        <li>
          <%= link_to logout_path, method: :delete do %>
            <i class="glyphicon glyphicon-log-out"></i>
            Logout
          <% end %>
        </li>
    </ul>
  </div>


  <% else %>
  
    <div class="nav_item">
      <%= link_to 'Log in', login_path, class:'btn btn-primary' %>
    </div>

    <div class="nav_item">
      <%= link_to 'Register', register_path, class:'btn btn-primary' %>
    </div>

  <% end %>

</div>